<?xml version="1.0" encoding="UTF-8"?>

<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="true"
         syntaxCheck="false"
         bootstrap="./tests/Adrenth/Tests/TestInit.php"
        >
    <testsuites>
        <testsuite name="Adrenth Test Suite">
            <directory>./tests/Adrenth/</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory>./lib/Adrenth/</directory>
        </whitelist>
    </filter>
    <php>
        <const name="API_KEY" value="" />
        <const name="API_USERNAME" value="" />
        <const name="API_USER_KEY" value="" />
    </php>
</phpunit>
